@using Bookstore.Models;

@model List<Books>
<h1 style="text-align:center">Book Inventory </h1>
<br>
<br>
<table style="width:100%">
    <thead>
        <tr>
            <th>
                Book Id
            </th>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
           <th>
               Quantity
           </th>
        </tr>
    </thead>

    <tbody>

        @{
            foreach (Books b in Model)
            {
                <tr>
                    <td><a href="/Admin/IndividualBook?id=@b.Id">@b.Id</a></td>
                    <td>@b.Title </td>
                    <td>@b.Author</td>
                    <td>@b.Quantity</td>
                </tr>
            }
        }


    </tbody>
</table>
<br />
<button onClick="location.href='/Admin/Index'">Return to Main Menu</button>











